import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        String s1,s2;
        Scanner in=new Scanner(System.in);
        s1=in.nextLine();
        s2=in.nextLine();
//        System.out.println(s1);
//        System.out.println(s2);
        System.out.println("Length of s1: "+s1.length());
        System.out.println("Length of s2: "+s2.length());
        System.out.println("s1 string after replacement: " + s1.replace(" ","_"));
        System.out.println("First character of s1 string: " + s1.charAt(0));
        System.out.println("s1 and s2 are same. " + (s1.equals(s2)));
        System.out.println("First occurrence of 'a' at index: " + s1.indexOf('a'));
        if(s1.contains(s2)) System.out.println("s2 is a substring of s1");
        if(s2.contains(s1)) System.out.println("s1 is a substring of s2");
        System.out.println("s1 string after converting it to Lowercase: " + s1.toLowerCase());
        System.out.println("s2 string after converting it to Uppercase: " + s2.toUpperCase());
        char[] arr=s1.toCharArray();
        System.out.println("s1 string after converting it to a character array: ");
        for(char i:arr) System.out.print(i);
        in.close();
    }
}
